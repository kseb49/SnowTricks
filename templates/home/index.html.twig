{% extends 'base.html.twig' %}
{% block body %}
<div class="subnav container-fluid">
    <div class="slogan">
        <p class="motto">Chase Snow, Chase Thrills</p>
        <a class="arrow" href="#"><i class="bi bi-caret-down-fill"></i></a>
    </div>
</div>
    <div class="container pt-4">
     {#Link of pagination#}
                {% for figures in messages %}
                    {% if loop.first %}
                        <nav>
                            <ul class="pagination justify-content-center">
                            {% if previous >= 0 %}
                                <li class="page-item">
                                    <a class="page-link" href="{{ path('home', { offset: previous }) }}#comments"><i class="bi bi-caret-left page"></i> Pr√©c√©dent</a>
                                </li>
                            {% endif %}
                            {% if next < messages|length %}
                                <li class="page-item">
                                    <a class="page-link" href="{{ path('home', { offset: next }) }}#comments">Suivant <i class="bi bi-caret-right page"></i></a>
                                </li>
                            {% endif %}
                            </ul>
                        </nav>
                    {% endif %}
                {% endfor %}
    {####################}
        {% for figures in messages | batch(3)%}
            <div class="row grid" id="comments">
                {% for key, figure in figures %}
                    {% include 'utils/deletemodal.html.twig' with {name : figure.name, path : 'figuresdelete', id : figure.id} %}
                    <div class="col-sm m-1">
                        <div class="card" style="width: 18rem;">
                            {% for image in figure.images %}
                                {% if loop.first %}
                                    <img class="card-img-top" src={{asset('images/figures/')}}{{image.ImageName}} alt="Card image cap">
                                {% endif %}
                            {% endfor %}
                            <div class="card-body">
                                <h5 class="card-title text-capitalize">{{figure.name}}</h5>
                                <h6 class="card-subtitle mb-2 text-muted">{{figure.GroupsId.GroupName}}</h6>
                                {#shows the truncated content#}
                                    {% for desc in short_desc %}
                                        {% for keys, short_d in desc %}
                                            {% if figure.name == keys %}
                                                <p class="card-text">{{short_d}}<a href="{{ path('figuresdetails', {slug : figure.slug})}}">voir plus</a></p>
                                            {% endif %}
                                        {% endfor %}
                                    {% endfor %}
                                {##############################}
                                {% if app.user and app.user.id == figure.UsersId.id %}
                                    <button type="button" class="btn btn-danger m-1 btn-sm" data-toggle="modal" data-target="#deleteModal{{key}}">üóëÔ∏è Supprimer</button>
                                    <a type="button" href={{path('figuresdetails', {slug : figure.slug})}} class="btn btn-info btn-sm">‚úçÔ∏è Modifier</a>
                                {% endif %}
                            </div>
                            <div class="card-footer text-muted">
                                Ajout√© le {{figure.CreationDate |date("d/m/y")}} par @{{figure.UsersId.name}}
                                {% if figure.UpdateDate %}
                                D√®rni√®re mise √† jour le {{figure.UpdateDate | date("d/m/y")}}
                                {% endif %}
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endfor %}
             {#Link of pagination#}
                {% for figures in messages %}
                    {% if loop.first %}
                        <nav>
                            <ul class="pagination justify-content-center">
                            {% if previous >= 0 %}
                                <li class="page-item">
                                    <a class="page-link" href="{{ path('home', { offset: previous }) }}#comments"><i class="bi bi-caret-left page"></i> Pr√©c√©dent</a>
                                </li>
                            {% endif %}
                            {% if next < messages|length %}
                                <li class="page-item">
                                    <a class="page-link" href="{{ path('home', { offset: next }) }}#comments">Suivant <i class="bi bi-caret-right page"></i></a>
                                </li>
                            {% endif %}
                            </ul>
                        </nav>
                    {% endif %}
                {% endfor %}
            {####################}
    </div>
{% endblock %}
