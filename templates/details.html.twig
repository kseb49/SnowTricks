{% extends 'base.html.twig' %}
{% block body %}
    <div class="container"> 
        {% include 'utils/deletemodal.html.twig' with {name : figures.name, path : 'figuresdelete', id : figures.id} %}
        <h1 class="text-center m-5">{{ figures.name }}</h1>
        <p class="text-center">{{figures.GroupsID.GroupName}}</p>
        <p>
          Ajout√© le {{figures.CreationDate |date("d/m/y")}} par @{{figures.UsersId.name}}<br>
            {% if figures.UpdateDate %}
            D√®rni√®re mise √† jour le {{figures.UpdateDate | date("d/m/y")}}
            {% endif %}
        </p>
        {# images #}
        {% for image in figures.images %}
            {% include 'utils/deletemodal.html.twig' with {name : image.ImageName, path :"delete_image", subject : 'image', key : image.Id, id : figures.id} %}
            {% if loop.first %}
                <div class="row">
                    <div class="col">
                            {% if app.user and app.user.id == figures.UsersId.id %}
                                {% if image.ImageName == default_image %}
                                    {% include 'utils/button.html.twig' with {id : figures.id, file: image.Id, path : 'edit_image', type:'image'} %}
                                {% else %}
                                    {% include 'utils/button.html.twig' with {id : figures.id, display : true, file: image.Id, path : 'edit_image', type:'image'} %}
                                {% endif %}
                            {% endif %}
                        <img src={{asset('images/figures/')}}{{image.ImageName}} alt="" class="img-fluid big">
                    </div>
                </div>
                <div class="row">
            {% else %}
                    <div class="col-4">
                        {% if app.user and app.user.id == figures.UsersId.id %}
                            {% include 'utils/button.html.twig' with {id : figures.id, display : true, file: image.Id, path : 'edit_image',type:'image',path_delete : "delete_image"} %}
                        {% endif %}
                        <img src={{asset('images/figures/')}}{{image.ImageName}} alt="" class="img-thumbnail">
                    </div>
                {% endif %}
        {% endfor %}
                </div>
        {# Videos #}
        {% for videos in figures.videos | batch(3) %}
            <div class="row">
                {% for key, video in videos %}
                    {% include 'utils/deletemodal.html.twig' with {name : video.src, path :"delete_video", subject : 'video', key : video.Id, id:figures.Id} %}
                    {% if key == 4 or key == 5 %}
                        <div class="col-4">
                    {% else %}
                        <div class="col">
                    {% endif %}
                        <div class="embed-responsive embed-responsive-16by9">
                        {% if app.user and app.user.id == figures.UsersId.id %}
                            {% include 'utils/button.html.twig' with {id : figures.id, display : true, file: video.Id, path : 'edit_video', type:'video'} %}
                        {% endif %}
                        <iframe class="embed-responsive-item" src={{video.src}} title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"allowfullscreen></iframe>
                        {# {% if loop.last %} #}
                            </div>
                        {# {% endif %} #}
                    </div>
                {% endfor %}
            </div>
        {% endfor %}
        {# description #}
        <div class="container">
            <div class="row">
                <div class="col">
                    <p class="text-justify p-2 desc">{{ figures.description}}<br>
                    {% if app.user and app.user.id == figures.UsersId.id %}
                        <a  href={{path('figuresedit',{'id' : figures.id})}} type="button" class="btn btn-info btn-sm m-1">‚úçÔ∏è Modifier</a></p>
                    {% endif %}
                </div>
            </div>
                {% if app.user and app.user.id == figures.UsersId.id %}
            <div class="row m-3 p-3 border bg-light">
                    <div class="col-sm-4 text-center">
                        {# <div class="m-2"> #}
                            <button type="button" class="btn btn-danger m-1 btn-sm" data-toggle="modal" data-target="#deleteModal">üóëÔ∏è Supprimer la figure</a>
                        {# </div> #}
                    </div>
                    <div class="col-sm-4 text-center">
                        {# <div class="m-2"> #}
                            <a href = {{path('add_image',{trick_id : figures.id})}} type="button" class="btn btn-success m-1 btn-sm">Ajouter une image</a>
                        {# </div> #}
                    </div>
                    <div class="col-sm-4 text-center">
                        {# <div class="m-2"> #}
                            <a href ={{path('add_video',{id : figures.id})}} type="button" class="btn btn-success m-1 btn-sm">Ajouter une vid√©o</a>
                        {# </div> #}
                    </div>
            </div>
                {% endif %}
               
            
                <div class="row">
                {# Commentaires #}
                    <div class="col" id="mess_form">
                        {% if app.user %}
                                {% include 'edition/add_comment.html.twig' with {connect : true} %}
                        {% else %}
                            {% include 'edition/add_comment.html.twig' with {connect : false} %}
                        {% endif %}
                    </div>
                <div class="col">
                    {% for message in figures.messages | sort ((a,b) => b.MessageDate <=> a.MessageDate) %}
                        <div class="card mb-3">
                            <div class="row m-1">
                                <div class="col">
                                    <img class="card-img-top message" src={{asset('images/avatars/')}}{{message.users.photo}} alt="Card image cap">
                                </div>
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">@{{message.users.name}}</h5>
                                <p class="card-text">{{message.content}}</p>
                                <div class="row m-1">
                                    <div class="col">
                                        <p class="card-text"><small class="text-muted">Le {{message.MessageDate | date("d/m/y √† H:i")}}</small></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                {# fin commentaires #}
                
                </div>
            {# {% if app.user and app.user.id == figures.UsersId.id %}
                <div class="col">
                    <div class="m-2">
                        <button type="button" class="btn btn-danger m-1 btn-sm" data-toggle="modal" data-target="#deleteModal">üóëÔ∏è Supprimer la figure</a>
                    </div>
                    <div class="m-2">
                        <a href = {{path('add_image',{trick_id : figures.id})}} type="button" class="btn btn-success m-1 btn-sm">Ajouter une image</a>
                    </div>
                    <div class="m-2">
                        <a href ={{path('add_video',{id : figures.id})}} type="button" class="btn btn-success m-1 btn-sm">Ajouter une vid√©o</a>
                    </div>
                </div>
            </div>
            {% endif %} #}
        </div>
{% endblock %}