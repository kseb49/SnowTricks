<div class="btn-toolbar" role="toolbar" aria-label="Toolbar with button groups">
    <div class="btn-group m-1" role="group" aria-label="First group">
        <a href={{ path(path, { id:id, (type)~'_id': file }) }} type="button" class="btn btn-primary btn-sm">✍️ Modifier</a>
    </div>
    {% if display is defined %}
        <div class="btn-group m-1" role="group" aria-label="Second group">
            <button  type="button" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#deleteModal{{file}}">🗑️ Supprimer</button>
        </div>
    {% endif %}
</div>