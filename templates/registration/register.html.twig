{% extends 'base.html.twig' %}

{% block title %}S'inscrire{% endblock %}

{% block body %}
<div class="container">
    <form action="{{path('app_register')}}" class="form" method="post" enctype="multipart/form-data">
    {% if error is defined %}
        <div class="alert alert-danger my-3">{{ error }}</div>
    {% endif %}
    <h1>Inscription</h1>
    {{ form_errors(registrationForm)|trans }}

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.name) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.password, {
            label: 'Mot de passe'
        }) }}
        {{ form_row(registrationForm.photo) }}
        <button type="submit" class="btn btn-primary">Register</button>
    {{ form_end(registrationForm) }}
    </form>
</div>
    
{% endblock %}
